{% extends 'layout.html.twig' %}
{% block title %}Emploi | Offre{% endblock %}
{% block body %}
    <!-- HOME -->
    <section class="section-hero overlay inner-page bg-image" style="background-image: url('{{ ('templates/images/hero_1.jpg') }}');" id="home-section">
        <div class="container">
            <div class="row">
                <div class="col-md-7">
                    <h1 class="text-white font-weight-bold">Modifier une offre</h1>
                    <div class="custom-breadcrumbs">
                        <a href="#">Home</a> <span class="mx-2 slash">/</span>
                        <a href="#">Job</a> <span class="mx-2 slash">/</span>
                        <span class="text-white"><strong>Offre</strong></span><span class="mx-2 slash">/</span>
                        <span class="text-white"><strong>Modification</strong></span>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <br/><br/>
    <section class="site-section">
        <div class="container">

            <div class="row align-items-center mb-5">
                <div class="col-lg-8 mb-4 mb-lg-0">
                    <div class="d-flex align-items-center">
                        <div>
                            <h2>Modifier une offre</h2>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mb-5">
                <div class="col-lg-12">
                    <form class="p-4 p-md-5 border rounded" action="{{ path('app_offre_update') }}" method="post">
                        <div class="form-group">
                            <label for="job-title">Titre</label>
                            <input type="text" name="titre" value="{{ offre.getTitre() }}" class="form-control" id="job-title" placeholder="Titre du poste" required>
                        </div>
                        <div class="form-group">
                            <label for="domaine">Domaine</label>
                            <select class="custom-select border rounded" name="domaine" required id="domaine" data-style="btn-black" data-width="100%" data-live-search="true" title="Select Domaine">
                                <option value="{{  offre.getDomaines.getId() }}" selected>{{  offre.getDomaines.getLibelle() }}</option>
                                {% if domaines!=null %}
                                    {% for domaine in domaines %}
                                        <option value="{{domaine.getId()}}">{{domaine.getLibelle()}}</option>
                                    {% endfor %}
                                {% endif %}
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="domaine">Niveau d'étude</label>
                            <select class="custom-select border rounded" name="niveauEtude" required id="niveau" data-style="btn-black" data-width="100%" data-live-search="true" title="Select Niveau d'etude">
                                <option value="{{ offre.getNiveauEtude()}}" selected>{{ offre.getNiveauEtude()}}</option>
                                <option value="bac">Bac</option>
                                <option value="bac+2">Bac+2</option>
                                <option value="licence">Licence</option>
                                <option value="master1">Master 1</option>
                                <option value="master2">Master 2</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="domaine">Année d'experience</label>
                            <select class="custom-select border rounded" name="anneeExperience" required id="anneeExperience" data-style="btn-black" data-width="100%" data-live-search="true" title="Select Annee d'experience">
                                <option value="{{ offre.getNbrAnneeExperience() }}" selected>{{ offre.getNbrAnneeExperience() }}</option>
                                <option value="0">Nouveau diplomé</option>
                                <option value="1">1 an</option>
                                <option value="2">2 à 3 ans</option>
                                <option value="5">5 à 10 ans</option>
                                <option value="11">+10</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="lieuNaissance">Ville</label>
                            <select class="custom-select border rounded" name="ville" required data-style="btn-black" data-width="100%" data-live-search="true" title="Select Region">
                                <option value="{{ offre.getVille() }}" selected>{{ offre.getVille() }}</option>
                                <option value="dakar">Dakar</option>
                                <option value="thies">Thies</option>
                                <option value="kaolack">Kaolack</option>
                                <option value="fatick">Fatick</option>
                                <option value="kafrine">Kafrine</option>
                                <option value="tambacounda">Tambacounda</option>
                                <option value="matam">Matam</option>
                                <option value="kedougou">Kedougou</option>
                                <option value="kolda">Kolda</option>
                                <option value="sediou">Sediou</option>
                                <option value="ziguinchor">Ziguinchor</option>
                                <option value="saintLouis">Saint-Louis</option>
                                <option value="diourbel">Diourbel</option>
                                <option value="louga">Louga</option>
                                <option value="autre">Autre</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="job-type">Type</label>
                            <select class="custom-select border rounded" name="jobType" required data-style="btn-black" data-width="100%" data-live-search="true" title="Select Type">
                                <option value="{{ offre.getType() }}" selected>{{ offre.getType() }}</option>
                                <option value="Temps Plain">Temps Plain</option>
                                <option value="Temps Partiel">Temps Partiel</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="mission">Description</label>
                            <textarea class="form-control" required name="description" id="description" rows="10">{{ offre.getDescription() }}</textarea>
                        </div>
                        <input type="hidden" name="offre_edit_token" value="{{ csrf_token('edit') }}">
                        <input type="text" value="{{ offre.getId() }}" name="id" hidden>
                        <div class="row align-items-center mb-5">
                            <div class="col-lg-4 ml-auto">
                                <div class="row">
                                    <div class="col-6">
                                        <a href="{{ path('app_offre') }}" class="btn btn-block btn-light btn-md"><span class="icon-open_in_new mr-2"></span>Annuler</a>
                                    </div>
                                    <div class="col-6">
                                        <input type="submit" value="Valider" class="btn btn-block btn-primary btn-md"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
